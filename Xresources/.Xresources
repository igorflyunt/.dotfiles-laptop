 rofi.lines:                          10
 rofi.location:                       0
 rofi.width:                          800
 rofi.yoffset:                        0
 rofi.padding:                        20
 rofi.opacity:                        100
 rofi.line-margin:                    15
 rofi.terminal:			      termite
 rofi.run-shell-command:              {terminal} -e "bash -lic {cmd}" -t {cmd}
 rofi.hide-scrollbar:                 true
 rofi.separator-style:                solid
 rofi.font:                           Inconsolata-g for Powerline 12
! ------------------------------------------------------------------------------
 rofi.color-enabled:                   true

! Property Name     BG       Border   Separator
rofi.color-window:  #383c4a, #383c4a, #959dcb

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  #383c4a, #959DCB, #383c4a, #5395e0, #ffffff
rofi.color-active:  #444267, #82aaff, #444267, #444267, #82aaff
rofi.color-urgent:  #444267, #f07178, #444267, #444267, #f07178
